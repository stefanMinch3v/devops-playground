@model IReadOnlyCollection<OutputEmployeeDetailsServiceModel>
@{
    ViewData["Title"] = "All Employees";
}

<div class="row">
    <div class="col-lg-4">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Total Folders</th>
            <th scope="col">Total Files</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.TotalFolders</td>
                <td>@employee.TotalFiles</td>
                <td>
                    <a class="btn btn-primary"
                       asp-area=""
                       asp-controller="Employees"
                       asp-action="Edit"
                       asp-route-id="@employee.Id">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
