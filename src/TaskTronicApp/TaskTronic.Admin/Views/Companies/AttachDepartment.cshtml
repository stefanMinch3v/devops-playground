@model CompanyDepartmentListViewModel
@{ 
    var companyId = Model.CompanyId;
}
<h2>Attach department</h2>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model.Departments)
                {
                    <tr>
                        <td>@department.Name</td>
                        <td>
                            <a class="btn btn-primary" href="/Companies/AttachDepartments?companyId=@companyId&departmentId=@department.DepartmentId">
                                Attach
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>